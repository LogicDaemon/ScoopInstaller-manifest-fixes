{
    "version": "1.6.27",
    "description": "The AI Code Editor",
    "homepage": "https://www.cursor.com/",
    "license": {
        "identifier": "Proprietary",
        "url": "https://www.cursor.com/terms-of-service"
    },
    "innosetup": true,
    "architecture": {
        "64bit": {
            "url": "https://downloads.cursor.com/production/d750e54bba5cffada6d7b3d18e5688ba5e944ad9/win32/x64/user-setup/CursorUserSetup-x64-1.6.27.exe",
            "hash": "8664182a6e163883a30bd43682b5af4fbf204203fa8672c903fdaab8165d9bc7"
        },
        "arm64": {
            "url": "https://downloads.cursor.com/production/d750e54bba5cffada6d7b3d18e5688ba5e944ad9/win32/arm64/user-setup/CursorUserSetup-arm64-1.6.27.exe",
            "hash": "12411c2ebbb01ff2e60750366d929a009523099aa1d2b215f9665ae1292e2bd3"
        }
    },
    "extract_dir": "{code_GetDestDir}",
    "pre_uninstall": [
        "foreach ($p in @(\"$env:USERPROFILE\\.cursor\", \"$env:APPDATA\\Cursor\")) {",
        "    if ((Test-Path $p) -and ((Get-Item $p).Attributes -match 'ReparsePoint')) {",
        "        Remove-Item $p -Force",
        "    }",
        "}"
    ],
    "post_install": [
        "Remove-item \"$dir\\`$*\", \"$dir\\Uninst*\" -Recurse",
        "if (!(Test-Path \"$persist_dir\\user-data\")) { New-Item -Path \"$persist_dir\\user-data\" -ItemType Directory }",
        "if (!(Test-Path \"$persist_dir\\.cursor\")) { New-Item -Path \"$persist_dir\\.cursor\" -ItemType Directory }",
        "$appDataCursor = \"$env:APPDATA\\Cursor\"",
        "if (Test-Path $appDataCursor) { if ((Get-Item $appDataCursor).Attributes -match 'ReparsePoint') { Remove-Item $appDataCursor -Force } }",
        "New-Item -Path $appDataCursor -ItemType Junction -Target \"$persist_dir\\user-data\"",
        "$profileCursor = \"$env:USERPROFILE\\.cursor\"",
        "if (Test-Path $profileCursor) { if ((Get-Item $profileCursor).Attributes -match 'ReparsePoint') { Remove-Item $profileCursor -Force } }",
        "New-Item -Path $profileCursor -ItemType Junction -Target \"$persist_dir\\.cursor\""
    ],
    "bin": "resources\\app\\bin\\cursor.cmd",
    "shortcuts": [
        [
            "Cursor.exe",
            "Cursor"
        ]
    ],
    "persist": "data",
    "checkver": {
        "url": "https://cursor.com/api/download?platform=win32-x64&releaseTrack=latest",
        "jsonpath": "$.downloadUrl",
        "regex": "production/(?<Code>[\\w]+)/.*(?<version>[\\d.]+)\\.exe"
    },
    "autoupdate": {
        "architecture": {
            "64bit": {
                "url": "https://downloads.cursor.com/production/$matchCode/win32/x64/user-setup/CursorUserSetup-x64-$version.exe"
            },
            "arm64": {
                "url": "https://downloads.cursor.com/production/$matchCode/win32/arm64/user-setup/CursorUserSetup-arm64-$version.exe"
            }
        }
    }
}
